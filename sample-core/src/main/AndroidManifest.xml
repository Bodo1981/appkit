    <activity
        android:name=".fragment_recyclerview.FragmentActivityRecyclerView"/>

    <activity
        android:name=".fragment_recyclerview_list.FragmentActivityRecyclerViewList"/>

    <activity
        android:name=".fragment_recyclerview_ptr.FragmentActivityRecyclerViewPtr"/>

    <activity
        android:name=".fragment_recyclerview_list_ptr.FragmentActivityRecyclerViewListPtr"/>

    <activity
