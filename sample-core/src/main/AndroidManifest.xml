<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.christianbahl.appkit.samplecore">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme">
    <activity
        android:name=".MainActivity"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".activity_fragment.ActivityFragment"/>

    <activity
        android:name=".activity_toolbar.ActivityToolbar"
        android:theme="@style/AppTheme.NoActionBar"/>

    <activity
        android:name=".activity_toolbar_fragment.ActivityToolbarFragment"
        android:theme="@style/AppTheme.NoActionBar"/>

    <activity
        android:name=".activity_toolbar_mvp.ActivityToolbarMvp"
        android:theme="@style/AppTheme.NoActionBar"/>

    <activity
        android:name=".activity_toolbar_fragment_mvp.ActivityToolbarFragmentMvp"
        android:theme="@style/AppTheme.NoActionBar"/>

    <activity
        android:name=".activity_toolbar_tabs_mvp.ActivityToolbarTabsMvp"
        android:theme="@style/AppTheme.NoActionBar"/>
  </application>

</manifest>
